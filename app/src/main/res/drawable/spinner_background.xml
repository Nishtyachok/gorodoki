<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when spinner is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Change this color to the desired color when spinner is pressed -->
            <corners android:radius="8dp" /> <!-- Adjust the radius to match the rounded corners of your EditText background -->
        </shape>
    </item>
    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" /> <!-- Change this color to the desired default background color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius to match the rounded corners of your EditText background -->
        </shape>
    </item>
</selector>
