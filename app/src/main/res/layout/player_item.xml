<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/edging"
              android:padding="8dp"
              android:layout_marginBottom="8dp">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
	<TextView
			android:id="@+id/tvPlayerName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:hint="Имя участника"
			android:textColor="#000"
			android:layout_marginTop="8dp"
			android:textSize="16sp"  />

	<TextView
			android:id="@+id/tvGrade"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:hint="Разряд участника"
			android:textColor="#000"
			android:layout_marginTop="8dp"
			android:textSize="16sp"  />
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/tvPlayerCategory"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:hint="Категория участника"
				android:textColor="#000"
				android:layout_marginTop="8dp"
				android:textSize="16sp" />

		<TextView
				android:id="@+id/tvPlayerRegion"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:hint="Регион участника"
				android:textColor="#000"
				android:layout_marginTop="8dp"
				android:textSize="16sp" />

	</LinearLayout>
</LinearLayout>
